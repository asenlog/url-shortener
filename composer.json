{
    "name": "Url Shortener",
    "description": "A Url Shortener Service built on Slim Framework",
    "keywords": ["microframework", "rest", "router", "psr2"],
    "homepage": "http://github.com/asenlog",
    "license": "MIT",
    "authors": [
        {
            "name": "Angelos Roussakis",
            "email": "angelos.roussakis@gmail.com",
            "homepage": "http://www.indespicable.me/"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.11",
        "respect/validation": "^1.1",
        "monolog/monolog": "^1.17",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/cache": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0 < 7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0,
        "bin-dir": "bin/"
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
